<UserControl x:Class="VirtualGameMode.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualGameMode.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:properties="clr-namespace:VirtualGameMode.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="20 0 0 0">
        <StackPanel>
            <Label FontSize="20">Disable Keys</Label>
            <Label FontSize="14" Margin="0 10 0 10">Disable Windows Key</Label>
            <mah:ToggleSwitch Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}" OnLabel="On" OffLabel="Off" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=DisableWinKey}"></mah:ToggleSwitch>
            <Label FontSize="14" Margin="0 10 0 10">Disable Alt-Tab</Label>
            <mah:ToggleSwitch Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}" OnLabel="On" OffLabel="Off" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=DisableAltTab}"></mah:ToggleSwitch>
            <Label FontSize="14" Margin="0 10 0 10">Disable Alt-F4</Label>
            <mah:ToggleSwitch Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}" OnLabel="On" OffLabel="Off" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=DisableAltF4}"></mah:ToggleSwitch>
            <Label FontSize="20" Margin="0 10 0 10">Scope</Label>
            <RadioButton x:Name="AddedApp" FontSize="14" Margin="0 4 0 4" GroupName="hookscope" Checked="AddedApp_OnChecked">Added Applications</RadioButton>
            <RadioButton x:Name="FullScreen" FontSize="14" Margin="0 4 0 4" GroupName="hookscope" Checked="FullScreen_OnChecked">Full Screen Applications</RadioButton>
            <RadioButton x:Name="Global" FontSize="14" Margin="0 4 0 4" GroupName="hookscope" Checked="Global_OnChecked">Global</RadioButton>
            <Label FontSize="20" Margin="0 10 0 0">Startup</Label>
            <Label FontSize="14" Margin="0 10 0 10">Launch on Windows Startup</Label>
            <mah:ToggleSwitch Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}" OnLabel="On" OffLabel="Off" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=LaunchOnStartup}" Checked="ToggleSwitch_OnChecked"> </mah:ToggleSwitch>
            <Label FontSize="14" Margin="0 10 0 10">Automatically Turn GameMode On</Label>
            <mah:ToggleSwitch Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}" OnLabel="On" OffLabel="Off" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=AutoGameMode}"></mah:ToggleSwitch>
        </StackPanel>
    </Grid>
</UserControl>
